    <script>
        window.addEventListener('scroll', function() {
            const blurredParagraphs = document.querySelectorAll('.blur');
            const scrollPosition = window.scrollY;
            const windowHeight = window.innerHeight;

            blurredParagraphs.forEach((paragraph) => {
                const paragraphPosition = paragraph.getBoundingClientRect().top + scrollPosition;
                if (scrollPosition > paragraphPosition - windowHeight + 100) {
                    paragraph.classList.remove('blur');
                } else {
                    paragraph.classList.add('blur');
                }
            });
        });

        function updateIcons() {
            const icons = document.querySelectorAll('.icon');
            const scrollPosition = window.scrollY;
            const windowHeight = window.innerHeight;
            const maxScroll = document.body.scrollHeight - windowHeight;
            const scrollPercentage = scrollPosition / maxScroll;

            icons.forEach(icon => {
                if (scrollPercentage > 0.1) {
                    icon.style.filter = `blur(${5 - scrollPercentage * 5}px)`;
                    icon.style.opacity = scrollPercentage;
                    icon.style.transform = `translateX(${icon.classList.contains('google-meet') ? -50 + scrollPercentage * 50 : 50 - scrollPercentage * 50}px)`;
                } else {
                    icon.style.filter = 'blur(5px)';
                    icon.style.opacity = '0';
                    icon.style.transform = `translateX(${icon.classList.contains('google-meet') ? -50 : 50}px)`;
                }
            });
        }

        window.addEventListener('scroll', updateIcons);
        window.addEventListener('load', updateIcons);
    </script>
